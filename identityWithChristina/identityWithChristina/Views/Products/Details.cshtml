@model identityWithChristina.Models.Product


@{
    
    Layout = "_Layout1";
    ViewData["Title"] = "Product Details";
}

<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>See more Details</p>
						<h1>Product Details</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- single product -->
	<div class="single-product mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-md-5">
					<div class="single-product-img">
						<img src="@Model.PhotoUrl" alt="">
					</div>
				</div>
				<div class="col-md-7">
					<div class="single-product-content">
						<h3>@Model.ProductName</h3>
						<p class="single-product-pricing">@Model.Points points</p>
						<p>@Model.ProductDescription</p>
						<div class="single-product-form">
							<form>
								<input type="number" placeholder="0" min="1" value="1">
							</form>
							<a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.ProductId"  class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                            <a asp-action="index" class="cart-btn pbtn">More Products</a>
                           <form method="post" asp-controller="User" asp-action="Owner">
							   <input type="hidden" value="@Model.OwnerUserId" name="id" asp-for="@Model.OwnerUserId" />
							   <input type="submit" value="Owner" class="cart-btn pbtn" /> 
						   </form>
						   <br /> <br />
							<p><strong>Categories:  </strong> @Model.Category.CategoryName</p>
						</div>
						<h4>Share:</h4>
						<ul class="product-share">
							<li><a href=""><i class="fab fa-facebook-f"></i></a></li>
							<li><a href=""><i class="fab fa-twitter"></i></a></li>
							<li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
							<li><a href=""><i class="fab fa-linkedin"></i></a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end single product -->
		
